{% extends "TFELibrairieBundle:admin:layout.html.twig" %}

{% form_theme form '@TFELibrairie/utilitaire/fields.html.twig' %}

{% block body %}
    <div class="jumbotron" align="center">
        <h3>Ajouter une catégorie</h3>
    </div>

    <div class="well col-sm-offset-2 col-sm-8">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group ">
            <div class="col-sm-4">
                {{ form_label(form.genre,"Genre" ,{'label_attr' : {'class': 'control-label'} }) }}
            </div>
            <div class="col-sm-8">
                {{ form_errors(form.genre) }}
            </div>
            {{ form_widget(form.genre, {'attr': {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group ">
            <div class="col-sm-4">
                {{ form_label(form.nomCategorie,"Catégorie" ,{'label_attr' : {'class': 'control-label'} }) }}
            </div>
            <div class="col-sm-8">
                {{ form_errors(form.nomCategorie) }}
            </div>
            {{ form_widget(form.nomCategorie, {'attr': {'class' : 'form-control'}}) }}
        </div>
        {{ form_widget(form.sauvegarder, {'attr': {'class' : 'btn btn-primary pull-right'}}) }}
        <a href="{{ path('admin_categorie_liste') }}"><button class="btn btn-danger" type="button">Annuler</button></a>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}


