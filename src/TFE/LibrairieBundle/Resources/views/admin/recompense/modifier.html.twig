{% extends "TFELibrairieBundle:admin:layout.html.twig" %}

{% form_theme form '@TFELibrairie/utilitaire/fields.html.twig' %}

{% block body %}
    <div class="jumbotron" align="center">
        <h3>Modifier une récompense : {{ recompense.nomRecompense }}</h3>
    </div>

    <div class="well col-sm-offset-2 col-sm-8">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group ">
            <div class="col-sm-4">
                {{ form_label(form.nomRecompense,"Récompense" ,{'label_attr' : {'class': 'control-label'} }) }}
            </div>
            <div class="col-sm-8">
                {{ form_errors(form.nomRecompense) }}
            </div>
            {{ form_widget(form.nomRecompense, {'attr': {'class' : 'form-control'}}) }}
        </div>
        {{ form_widget(form.sauvegarder, {'attr': {'class' : 'btn btn-primary pull-right'}}) }}
        <a href="{{ path('admin_recompense_liste') }}"><button class="btn btn-danger" type="button">Annuler</button></a>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}