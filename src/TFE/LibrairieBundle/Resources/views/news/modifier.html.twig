{% extends "TFELibrairieBundle::layout.html.twig" %}

{% block title %}
    News - {{ parent() }}
{% endblock %}

{% block galerie_body %}
    <div class="row">
        <div class="well col-sm-offset-3 col-sm-6">
            <h2 align="center">Ajouter une news</h2>
        </div>
    </div>

    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-sm-offset-2 col-sm-8">
                <div class="form-group ">
                    <div class="col-sm-4">
                        {{ form_label(form.titreNews,"Titre" ,{'label_attr' : {'class': 'control-label'} }) }}
                    </div>
                    <div class="col-sm-8">
                        {{ form_errors(form.titreNews) }}
                    </div>
                    {{ form_widget(form.titreNews, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group ">
                    <div class="col-sm-4">
                        {{ form_label(form.texteNews,"Texte" ,{'label_attr' : {'class': 'control-label'} }) }}
                    </div>
                    <div class="col-sm-8">
                        {{ form_errors(form.texteNews) }}
                    </div>
                    {{ form_widget(form.texteNews, {'attr': {'class' : 'form-control', 'rows': '15'}}) }}
                </div>
                <div class="form-group ">
                    {{ form_widget(form.sauvegarder, {'attr': {'class' : 'btn btn-primary pull-right'}}) }}
                    <a href="{{ path('news_auteur', {'id': app.user.id}) }}" class="pull-left">
                        <button type="button" class="btn btn-warning"><span class="glyphicon glyphicon-circle-arrow-left"></span> Retour</button>
                    </a>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}