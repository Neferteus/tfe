                    {{ form_widget(form.telephone, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                {{ form_label(form.email,"Email" ,{'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                {{ form_errors(form.email) }}
                <div class="col-sm-8">
                    {{ form_widget(form.email, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                {{ form_label(form.dateNaissance,"Date de naissance" ,{'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                {{ form_errors(form.dateNaissance) }}
                <div class="col-sm-8">
                    <div class="col-sm-4">
                        {{ form_widget(form.dateNaissance.day, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.dateNaissance.month, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
                    </div>
                    <div class="col-sm-4">
                        {{ form_widget(form.dateNaissance.year, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                {{ form_label(form.sexe, "Genre", {'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                {{ form_errors(form.sexe) }}
                <div class="col-sm-8">
                    {{ form_widget(form.sexe, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                {{ form_label(form.adresse.rue, "Rue", {'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                {{ form_errors(form.adresse.rue) }}
                <div class="col-sm-8">
                    {{ form_widget(form.adresse.rue, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
