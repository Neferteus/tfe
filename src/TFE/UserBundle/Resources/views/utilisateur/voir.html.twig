            </div>
        </div>

        <div class="row">
            <div class="form-group">
                {{ form_label(form.roles, "Rôles :", {'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                <div class="col-sm-8">
                    {{ form_widget(form.roles.0, {'attr': {'disabled' : 'true'}} ) }}
                    {{ form_label(form.roles.0, "Utilisateur", {'label_attr' : {'class': 'control-label'}}) }}
                    {{ form_widget(form.roles.1, {'attr': {'disabled' : 'true'}} ) }}
                    {{ form_label(form.roles.1, "Auteur", {'label_attr' : {'class': 'control-label'}}) }}
                    {{ form_widget(form.roles.2, {'attr': {'disabled' : 'true'}} ) }}
                    {{ form_label(form.roles.2, "Administrateur", {'label_attr' : {'class': 'control-label'}}) }}
                </div>
            </div>
        </div>

        <div class="row">
            <a href="{{ path('admin_user_liste_actif') }}"><button class="btn btn-danger pull-right" type="button">Annuler</button></a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}