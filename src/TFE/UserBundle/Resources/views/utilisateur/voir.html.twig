        <div class="row">
            <div class="form-group">
                {{ form_label(form.adresse.ville.pays, "Pays", {'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                {{ form_errors(form.adresse.ville.pays) }}
                <div class="col-sm-8">
                    {{ form_widget(form.adresse.ville.pays, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
