            </div>
        </div>

        <div class="row">
            <div class="form-group">
                {{ form_label(form.adresse.ville.codePostal, "Code Postal", {'label_attr' : {'class': 'control-label col-sm-4'}}) }}
                {{ form_errors(form.adresse.ville.codePostal) }}
                <div class="col-sm-8">
                    {{ form_widget(form.adresse.ville.codePostal, {'attr': {'class' : 'form-control', 'disabled' : 'true'} }) }}
